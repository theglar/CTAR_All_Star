<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CTAR_All_Star.HistoryPage">
    
    <ListView  x:Name="measurementsView">
        <ListView.Header>
            <StackLayout Padding="10,10,10,10" BackgroundColor="#003366"
                        Orientation="Vertical">
                <StackLayout Orientation="Horizontal">
                    <Label Text="Name" FontSize="Medium" FontAttributes="Bold"
                                TextColor="White" />
                    <Label Text="Session" FontSize="Medium" FontAttributes="Bold"
                                HorizontalOptions="EndAndExpand"
                                TextColor="White" />
                    <Label Text="Pressure" FontSize="Medium" FontAttributes="Bold"
                                HorizontalOptions="EndAndExpand"
                                TextColor="White" />
                    <Label Text="Time" FontSize="Medium" FontAttributes="Bold"
                                HorizontalOptions="EndAndExpand"
                                TextColor="White" />
                </StackLayout>
            </StackLayout>
        </ListView.Header>
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Padding="10,10,10,0" BackgroundColor="#999999"
                        Orientation="Vertical">
                        <StackLayout Orientation="Horizontal" Padding="10,0,10,0">
                            <Label Text="{Binding UserName}"
                                TextColor="#003366" />
                            <Label Text="{Binding SessionNumber}"
                                HorizontalOptions="EndAndExpand"
                                TextColor="#003366" />
                            <Label Text="{Binding Pressure}"
                                HorizontalOptions="EndAndExpand"
                                TextColor="#003366" />
                            <Label Text="{Binding DisplayTime}"
                                HorizontalOptions="EndAndExpand"
                                TextColor="#003366" />
                        </StackLayout>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>