<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CTAR_All_Star.Views.AddPatientPage">
    <ContentPage.Content>
        <StackLayout Margin="10,10,10,0">
            <Label FontSize="Large" FontAttributes="Italic" Margin="20" HorizontalOptions="CenterAndExpand">Please enter the Patient EMR number:</Label>
            <Entry x:Name="patientIdEntry" Placeholder="Patient EMR Number" Keyboard="Numeric" HorizontalOptions="CenterAndExpand"/>
            <Button Text="Add Patient"
                    Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>